
@{
    ViewBag.Title = "WithDraw";
    Layout = "~/Views/User/_Layout_user.cshtml";
}

<div class="user-right-w pull-right am-margin-bottom-lg am-margin-left-lg">
    <div class="panel panel-default am-margin-bottom-0">
        <div class="panel-heading">
            <h3 class="panel-title clearfix">
                提现
            </h3>
        </div>
        <div class="panel-body">
            <form action="" class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">账户余额</label>
                    <div class="col-sm-6">
                        <p class="form-control-static">137</p>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">冻结金额</label>
                    <div class="col-sm-6">
                        <p class="form-control-static">0</p>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">可提取余额</label>
                    <div class="col-sm-6">
                        <p class="form-control-static">2000</p>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">提现金额</label>
                    <div class="col-sm-6">
                        <input type="text" name="" id="" value="" class="form-control" placeholder="请输入提现金额" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-3">
                        <button type="button" class="btn btn-info bg-lightblue btn-block">取消</button>
                    </div>
                    <div class="col-lg-3">
                        <button type="button" class="btn btn-info bg-lightblue btn-block">提现</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

