@model RechargeParameters
@{
    ViewBag.Title = "Charge";
    Layout = "~/Views/User/_Layout_user.cshtml";
}

<div class="user-right-w pull-right am-margin-bottom-lg am-margin-left-lg">
    <div class="panel panel-default am-margin-bottom-0">
        <div class="panel-heading">
            <h3 class="panel-title clearfix">
                充值
            </h3>
        </div>
        <div class="panel-body">
            <form action="/UserAccount/Charge" method="post" class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">支付方式</label>
                    <div class="col-sm-6">
                        <select name="" class="form-control">
                            <option value="">支付宝</option>
                            <option value="">银联支付</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">充值金额</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(m=>m.Amount,new { @class="form-control",placeholder="请输入充值金额" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-3">
                        <button type="button" class="btn btn-info bg-lightblue btn-block">取消</button>
                    </div>
                    <div class="col-lg-3">
                        <button type="submit" class="btn btn-info bg-lightblue btn-block">充值</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

