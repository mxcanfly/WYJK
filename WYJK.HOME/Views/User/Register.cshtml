@model WYJK.HOME.Models.RegisterViewModel
@{
    Layout = "~/Views/_Layout1.cshtml";
}


<div class="bg-lightgrey">
    <div class="container">
        <div class="clearfix">
            <div class="pull-left">
                <img src="~/Content/img/login-left.jpg" width="739" height="452">
            </div>
            <div class="pull-right">
                <div class="bg-white loginBox-w am-padding-lg">
                    <form action="" class="form-horizontal" method="post">
                        <div class="form-group">
                            <label for="" class="col-lg-3 control-label">用户名</label>
                            <div class="col-lg-9">
                                <input type="text" class="form-control" id="" placeholder="请输入用户名">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-lg-3 control-label">手机号</label>
                            <div class="col-lg-9">
                                <input type="text" class="form-control" id="" placeholder="请输入手机号">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-lg-3 am-padding-left-0 control-label">短信验证码</label>
                            <div class="col-lg-5 am-padding-right-0">
                                <input type="text" class="form-control" id="" placeholder="请输入验证码">
                            </div>
                            <div class="col-lg-4">
                                <button type="button" class="btn btn-info bg-lightblue">获取验证码</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-lg-3 control-label">密码</label>
                            <div class="col-lg-9">
                                <input type="password" class="form-control" id="inputPassword3" placeholder="请输入密码">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-lg-3 control-label">验证码</label>
                            <div class="col-lg-4 am-padding-right-0">
                                <input type="text" class="form-control" id="" placeholder="请输入验证码">
                            </div>
                            <div class="col-lg-5">
                                <!--验证码-->
                                <div class="clearfix">
                                    <div class="pull-left">
                                        <div class="codeBox-w">
                                            <img src="~/Content/img/2.jpg" width="88" height="32">
                                        </div>
                                    </div>
                                    <div class="pull-left">
                                        <button type="button" class="btn btn-info refreshBtn-w"><i class="glyphicon glyphicon-repeat"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-lg-3 control-label">邀请码</label>
                            <div class="col-lg-9">
                                <input type="text" class="form-control" id="" placeholder="请输入推荐人邀请码（选填）">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-9 col-lg-offset-3">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="" id="" value="">
                                        我已阅读并同意<a href="#">无忧借款服务协议</a>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <!--按钮-->
                        <div class="form-group">
                            <div class="col-lg-9 col-lg-offset-3">
                                <button type="button" class="btn btn-info bg-lightblue btn-lg btn-block">注册</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--end-->
</div>

<script>
    $(function () {
       $("#doLogin").click(function(){
            $("#userForm").submit();
       });
       $("#check_code,#re_code").click(function () {
           $("#check_code").attr("src", $("#check_code").attr("src") + "&" + $("#check_code").attr("src").length);
       });
       
    });
</script>