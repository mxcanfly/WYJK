@model WYJK.Entity.PagedResult<WYJK.HOME.Models.InsuranceViewModel>
@{
    Layout = "~/Views/User/_Layout_user.cshtml";
}
<script src="~/Content/laypage/1.3/laypage.js"></script>

<script>
    $(function () {
        laypage({
            cont: $('#pager'),
            skin: '#AF0000', //皮肤
            pages: '@Model.TotalPageCount', //可以叫服务端把总页数放在某一个隐藏域，再获取。假设我们获取到的是18
            curr: function () { //通过url获取当前页，也可以同上（pages）方式获取
                var page = location.search.match(/PageIndex=(\d+)/);
                return page ? page[1] : 1;
            }(),
            jump: function (e, first) { //触发分页后的回调
                if (!first) { //一定要加此判断，否则初始时会无限刷新
                    location.href = '?PageIndex=' + e.curr;
                }
            }
        });
    });
</script>

<div class="user-right-w pull-right am-margin-bottom-lg am-margin-left-lg">
    <div class="panel panel-default bg-lightgrey am-margin-bottom-0">
        <div class="panel-heading">
            <h3 class="panel-title row">
                <div class="col-lg-3">
                    <input type="text" class="form-control" name="" id="" value="" placeholder="姓名">
                </div>
                <div class="col-lg-3">
                    <select class="form-control">
                        <option value="">户籍性质</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>
                <div class="col-lg-3">
                    <select class="form-control">
                        <option value="">参保城市</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>
                <div class="col-lg-3 text-right">
                    <button type="button" class="btn btn-info bg-lightblue">查询</button>
                </div>
            </h3>
        </div>
        <div class="insurance-list-w">
            <ul class="list-unstyled am-margin-0">
                @foreach (var item in Model.Items)
                {
                    <li class="row bg-white">
                        <div class="col-lg-1">
                            <div class="checkbox">
                                <label>
                                    @item.SocialSecurityPeopleID
                                    <input type="checkbox" id="" value="@item.SocialSecurityPeopleID" aria-label="...">
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-11">
                            <dl class="am-margin-0">
                                <dd class="row am-padding-vertical-sm">
                                    <div class="col-lg-4">
                                        姓名：<span class="orange">@item.SocialSecurityPeopleName</span>
                                    </div>
                                    <div class="col-lg-4">
                                        身份证：@item.IdentityCard
                                    </div>
                                    <div class="col-lg-4">
                                        户籍性质：@item.HouseholdProperty
                                    </div>
                                </dd>
                                <dd class="row am-padding-vertical-sm">
                                    <div class="col-lg-4">
                                        起缴月份：@item.PayTime
                                    </div>
                                    <div class="col-lg-4">
                                        结束月份：@item.StopDate
                                    </div>
                                    <div class="col-lg-4">
                                        社保基数：@item.SocialSecurityBase
                                    </div>
                                </dd>
                                <dd class="row am-padding-vertical-sm">
                                    <div class="col-lg-4">
                                        社保金额：@item.SocialSecurityAmount
                                    </div>
                                    <div class="col-lg-4">
                                        公积金基数：@item.AccumulationFundBase

                                    </div>
                                    <div class="col-lg-4">
                                        公积金金额：@item.SocialSecurityAmount
                                    </div>
                                </dd>
                                <dd class="row am-padding-vertical-sm">
                                    <div class="col-lg-4">
                                        社保状态：@item.SocialSecurityStatus
                                        @EnumExt.GetEnumCustomDescription((SocialSecurityStatusEnum)item.SocialSecurityStatus.AsInt())
                                                                    
                                    </div>
                                    <div class="col-lg-4">
                                        公积金状态：@item.AccumulationFundStatus
                                    </div>
                                    <div class="col-lg-4">
                                    </div>
                                </dd>
                            </dl>
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div id="pager" style="margin-top: 20px;"></div>
        <div class="row am-padding-vertical-xl">
            <div class="col-lg-2 col-lg-offset-3">
                <button type="button" class="btn btn-info bg-lightblue btn-block">全选</button>
            </div>
            <div class="col-lg-2">
                <button type="button" class="btn btn-info bg-lightblue btn-block">停保</button>
            </div>
            <div class="col-lg-2">
                <button type="button" class="btn btn-info bg-lightblue btn-block">停公积金</button>
            </div>
        </div>
    </div>
</div>